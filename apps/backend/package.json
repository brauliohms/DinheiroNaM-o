{
  "name": "backend",
  "version": "0.1.0",
  "author": {
    "email": "braulio@integradocs.com.br",
    "name": "Braulio Henrique Marques Souto"
  },
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "lint": "npx eslint --ext .ts src/",
    "lint:tests": "npx eslint --ext .ts test/",
    "start": "node -r module-alias/register ./dist",
    "dev": "ts-node-dev --respawn --ignore-watch node_modules src/index.ts",
    "test": "jest",
    "test:no-reloading": "npx ts-node --files -r tsconfig-paths/register ./test",
    "knex:migrate:make": "knex --knexfile ./src/adapters/database/knex/knexfile.ts migrate:make",
    "knex:migrate:up": "knex --knexfile ./src/adapters/database/knex/knexfile.ts migrate:latest",
    "knex:migrate:down": "knex --knexfile ./src/adapters/database/knex/knexfile.ts migrate:rollback",
    "knex:seed:make": "knex --knexfile ./src/adapters/database/knex/knexfile.ts seed:make",
    "knex:seed:run": "knex --knexfile ./src/adapters/database/knex/knexfile.ts seed:run"
  },
  "prisma": {
    "schema": "src/adapters/database/prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "common": "*",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "inserturlparams": "^1.0.1",
    "jet-logger": "^1.3.1",
    "jet-paths": "^1.0.6",
    "jet-validator": "^1.1.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "registro": "*",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "^5.1.4",
    "@types/jest": "^29.5.12",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "jasmine": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.16.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
